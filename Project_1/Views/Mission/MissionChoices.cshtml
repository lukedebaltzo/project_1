@model Project_1.Models.Mission

@{
    ViewBag.Title = "MissionChoices";
}

<h2>MissionChoices</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <h4>Which mission would you like to see more information about?</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })]
    <div class="form-group">
        @Html.LabelFor(model => model.Mission_Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(x => x.Mission_Name, new SelectList(ViewBag.Mission, "Mission_Code", "Mission_Name"))
            @Html.ValidationMessageFor(model => model.Mission_Code, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ok" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
